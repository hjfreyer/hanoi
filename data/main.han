proc (self, method) parseint => {
    self match {
        #nil{} => {
            let #parse{} = method;
            (#await_next{0}, #req{#next{}})
        },
        #await_next{acc} => {
            method match {
                #none{} => (#done{}, #resp{acc}),
                #some{c} => {
                    let digit = (c 'ord, 48) 'sub;
                    let acc = ((10, acc) 'prod, digit) 'add;
                    (#await_next{acc}, #req{#next{}})
                },
            }
        },
    }
}

